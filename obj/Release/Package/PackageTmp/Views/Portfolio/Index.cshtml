                    <h4 class="modal-title">Number Set Manipulation</h4>
                </div>
                <div class="modal-body container-fluid">
                    <div class="row">
                        <div class="col-sm-4">
                            <div>
                                <p>Enter any 5 numbers below, then click 'Process'</p>
                            </div>
                            <div>
                                <input type="number" placeholder="Enter number" id="num1" />
                                <input type="number" placeholder="Enter number" id="num2" />
                                <input type="number" placeholder="Enter number" id="num3" />
                                <input type="number" placeholder="Enter number" id="num4" />
                                <input type="number" placeholder="Enter number" id="num5" />
                                <button id="sorting" class="btn-danger">Process</button>
                                <p id="results1">See the results display here:</p>
                                <p id="results2"></p>
                                <p id="results3"></p>
                                <p id="results4"></p>
                                <p id="results5"></p>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <pre class="brush:js">
                                $(document).ready(
                                    app = {
                                        least: "",
                                        greatest: "",
                                        mean: "",
                                        sum: 0,
                                        product: 1,
                                        numbers: [],
                                    },
                                    $("#sorting").click(
                                        function () {
                                            app.numbers.push($("#num1").val(), $("#num2").val(), $("#num3").val(), $("#num4").val(), $("#num5").val());
                                            for (var i = 0; i < app.numbers.length; i++) {
                                                var test = app.numbers[i];
                                                if (test === "") {
                                                    $("#results1").text("Invalid entry. Please make sure you are entering one number per entry field.");
                                                    return;
                                                }
                                            }
                                            app.numbers.sort(function (a, b) { return a - b });
                                            app.least = app.numbers[0];
                                            app.greatest = app.numbers[4];
                                            for (var j = 0; j < app.numbers.length; j++) {
                                                app.sum += Number(app.numbers[j]);
                                                app.product *= Number(app.numbers[j]);
                                            }
