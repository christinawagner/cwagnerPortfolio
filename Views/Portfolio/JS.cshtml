@section Scripts
{
    <script>
        $('#jsExerciseModal').on('shown.bs.modal', function (e) {
            var title = $(e.relatedTarget).data("title");
            $("#jsExerciseModalTitle").text(title);
            $.post("/Portfolio/LoadJavascriptModal",
                {
                    intro: $(e.relatedTarget).data("intro-source"),
                    html: $(e.relatedTarget).data("html-source"),
                    javascript: $(e.relatedTarget).data("javascript-source")
                },
                function (result, status) {
                    $("#jsExerciseModalContent").html(result);
                });
        })
    </script>
