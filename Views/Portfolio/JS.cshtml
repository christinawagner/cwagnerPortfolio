@section Scripts
{
    <script>
        $('.modal-toggle').on('click', function (e) {
            $('.nav-tabs a[href="#1a"]').tab('show');

            var title = $(this).data("title");
            $("#jsExerciseModalTitle").text(title);

            $.post("/Portfolio/LoadJavascriptModal",
                {
                    intro: $(this).data("intro-source"),
                    html: $(this).data("html-source"),
                    javascript: $(this).data("javascript-source")
                },
                function (result, status) {
                    $("#jsExerciseModalContent").html(result);
                    $('#jsExerciseModal').modal('show');
                });
        })
    </script>
}